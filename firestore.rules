
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Admin is identified by their email address. This is simpler and avoids read-before-write issues.
    function isAdmin() {
      return isSignedIn() && request.auth.token.email == 'admin@arco.com';
    }

    // Default secure rule: Admins can write anywhere, signed-in users can read.
    match /{document=**} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // Rules for user profiles.
    match /users/{userId} {
      allow read: if isSignedIn();

      // CREATE: An admin can create any user. A user can create their own profile but cannot assign themselves as admin.
      allow create: if isAdmin() || (isOwner(userId) && request.resource.data.role == 'user');
      
      // UPDATE: An admin can update any profile. A user can update their own profile but cannot change their role.
      allow update: if isAdmin() || (isOwner(userId) && request.resource.data.role == resource.data.role);
      
      // DELETE: Only an admin can delete users.
      allow delete: if isAdmin();
    }

    // Overrides for collections where regular users also need write access.
    match /sales/{saleId} {
      allow read, write: if isSignedIn();
    }
    match /estimates/{estimateId} {
        allow read, write: if isSignedIn();
    }
    match /counters/{counterId} {
        allow read, write: if isSignedIn();
    }
  }
}
