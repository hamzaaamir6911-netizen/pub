
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is signed in.
    function isSignedIn() {
      return request.auth != null;
    }
    
    // For this simplified app, we'll allow any authenticated user to read/write.
    // In a real app, you would have more granular rules.
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}
